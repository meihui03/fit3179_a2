{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/meihui03/fit3179_a2/refs/heads/main/js/ne_10m_admin_1_states_provinces.topojson?token=GHSAT0AAAAAACX2S5MMZWSXSEL5OYIDOES6ZXO7KLQ",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name", 
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/meihui03/fit3179_a2/refs/heads/main/data/blood_donations_state.csv?token=GHSAT0AAAAAACX2S5MNPMQKDW7TAMTOZZSEZXO7PCA",
          "format": {"type": "csv"}
        },
        "key": "state",  
        "fields": ["donations"] 
      }
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "donations",
          "as": "Total Donations" 
        }
      ],
      "groupby": ["properties.name"]  
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Total Donations", 
      "type": "quantitative",
      "scale": {"type": "linear"}  
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Total Donations", "type": "quantitative", "title": "Total Donations"}
    ]
  }
}
