{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 450,
  "background": "transparent", 
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/meihui03/fit3179_a2/refs/heads/main/js/ne_10m_admin_1_states_provinces.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/meihui03/fit3179_a2/refs/heads/main/data/preprocessed_data.csv",
          "format": {"type": "csv"}
        },
        "key": "state",
        "fields": ["donations","pop"]
      }
    },
    {"calculate": "datum.donations/datum.pop * 10000", "as": "Donations per 10,000 population"}
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Donations per 10,000 population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [500, 1500, 5000, 10000],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#662506"]
          },
          "legend": {
            "title": "Donations per 10,000 population"
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {
            "field": "Donations per 10,000 population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
