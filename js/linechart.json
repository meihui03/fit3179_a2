{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/meihui03/fit3179_a2/refs/heads/main/data/newdonors_state_aggregated_by_month.csv"
  },
  "width": 900,
  "height": 400,
  "background": "transparent",
  "transform": [
    {
      "filter": "(datum.state != 'Malaysia') && (datum.year >= 2014)"
    },
    {
      "calculate": "toDate(datum.year, datum.month)",
      "as": "date"
    },
    {
      "aggregate": [{
        "op": "sum",
        "field": "donations",
        "as": "total_donations"
      }],
      "groupby": ["date", "age_group"]
    }
  ],
  "mark": {
    "type": "line",
    "point": {"filled": false, "fill": "white"}
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": "Date"}
    },
    "y": {
      "field": "total_donations",
      "type": "quantitative",
      "axis": {"title": "Total Donations"}
    },
    "color": {
      "field": "age_group",
      "type": "nominal",
      "legend": {"title": "Age Group"},
      "scale": {"scheme": "tableau20"}
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Date", "format": "%Y-%m"},
      {"field": "age_group", "type": "nominal", "title": "Age Group"},
      {"field": "total_donations", "type": "quantitative", "title": "Total Donations"}
    ]
  }
}
